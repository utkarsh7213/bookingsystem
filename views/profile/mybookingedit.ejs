<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Account - AMIST</title>
    <link rel="stylesheet" href="/styles/output.css" />
    <script src="https://kit.fontawesome.com/fea6aa327a.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.13.4/jquery.mask.min.js'></script>
</head>

<body>
    <div class="flex justify-center items-center h-[97vh]">
        <div class="w-full md:w-[70%] border border-gray-300 rounded-lg h-screen md:h-[80vh] flex flex-col md:flex-row">

            <!-- sidebar starts here -->
            <%- include('../components/settings_sidebar'); %>
                <!-- sidebar ends here -->

                <% if(booked_res.length> 0) { %>

                    <div class="w-full md:w-[70%] h-full overflow-y-auto">
                        <div class="">
                            <div class="text-center text-xl font-semibold text-[#1c425f]">
                                MY BOOKINGS
                            </div>

                            <% for(let i=0; i < booked_res.length; i++) { %>
                                <div class="flex flex-col justify-center items-center">
                                    <div class="bg-[#54ace2] py-2 h-[] w-[90%] rounded-[2rem] ">
                                        <div class="flex flex-col justify-center items-center space-y-2">
                                            <div
                                                class="bg-white rounded-[1.8rem] w-[96%] h-[170px] flex flex-col  justify-center p-1">


                                                <div class="flex justify-between px-5  ">
                                                    <h1 class="uppercase font-[700] text-[#0f327a]"> <%-
                                                            booked_res[i].title %>
                                                    </h1>

                                                </div>

                                                <div class="space-y-1 px-5 my-2">
                                                    <div class="flex items-center space-x-2 text-[#153244]">
                                                        <img src="/images/caleder.png" alt="" class="w-5  h-5">
                                                        <p class=""><span class="font-semibold">Date:</span> <%-
                                                                booked_res[i].booked_date %> </p>
                                                    </div>
                                                    <div class="flex items-center space-x-2 text-[#153244]">
                                                        <img src="/images/users.svg" alt="" class="w-5  h-5">

                                                        <% var quantities=[]; %>
                                                            <% if (booked_res[i].seniors_quantity) {
                                                                quantities.push(booked_res[i].seniors_quantity
                                                                + ' Seniors' ); } %>
                                                                <% if (booked_res[i].youths_quantity) {
                                                                    quantities.push(booked_res[i].youths_quantity
                                                                    + ' Youths' ); } %>
                                                                    <% if (booked_res[i].children_quantity) {
                                                                        quantities.push(booked_res[i].children_quantity
                                                                        + ' Childrens' ); } %>
                                                                        <% if (booked_res[i].adults_quantity) {
                                                                            quantities.push(booked_res[i].adults_quantity
                                                                            + ' Adults' ); } %>
                                                                            <% if (booked_res[i].infants_quantity) {
                                                                                quantities.push(booked_res[i].infants_quantity
                                                                                + ' Infants' ); } %>

                                                                                <% if (quantities.length> 0) { %>
                                                                                    <p><%- quantities.join(', ') %></p>
                                                                    <% } %>

                                                    </div>
                                                    <div class="flex items-center space-x-2 text-[#153244]">
                                                        <img src="/images/time.svg" alt="" class="w-5  h-5">
                                                        <p class=""><%- booked_res[i].travel_time %> hours</p>
                                                    </div>
                                                    <div class="flex items-center space-x-2 text-[#153244]">
                                                        <img src="/images/car.svg" alt="" class="w-5  h-5">
                                                        <p class="">Private transport for 1-4ppl.</p>
                                                    </div>
                                                </div>

                                            </div>

                                            <div
                                                class="bg-white rounded-[1.8rem] w-[96%] h-[px] flex flex-col  justify-center p-1">


                                                <div class="flex justify-between px-5  ">
                                                    <h1 class="uppercase font-[700] text-[#0f327a]">DISNEYLAND TOUR HK
                                                    </h1>
                                                </div>

                                                <div class="space-y-1 px-5 my-2">
                                                    <div class="flex items-center space-x-2 text-[#153244]">
                                                        <img src="/images/caleder.png" alt="" class="w-5  h-5">
                                                        <p class=""><span class="font-semibold">Dates:</span> <%- booked_res[i].booked_date %>  </p>
                                                    </div>
                                                    <div class="flex items-center space-x-2 text-[#153244]">
                                                        <img src="/images/users.svg" alt="" class="w-5  h-5">
                                                        <!-- <p class="">2 Adults, 2 Children </p> -->

                                                                <% if (quantities.length> 0) { %>
                                                                    <p><%- quantities.join(' , ') %></p>
                                                                <% } %>
                                                    </div>
                                                    <div class="flex items-center space-x-2 text-[#153244]">
                                                        <img src="/images/decoration.png" alt="" class="w-5  h-5">
                                                        <div class="">

                                                            <p class=""><%- booked_res[i].room_type %></p>
                                                            <!-- <p class="">Premier Seaview Room</p> -->
                                                        </div>
                                                    </div>
                                                    <div class="flex  space-x-2 text-[#153244]">
                                                        <img src="/images/bed.png" alt="" class="w-5  h-5">
                                                        <div class="flex items-center space-x-2 text-[#153244]">
                                                            <div class="">

                                                                <p class=""><%- booked_res[i].bed_type %></p>
                                                                <!-- <p class="">Twin bed</p> -->
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="flex  space-x-2 text-[#153244]">
                                                        <img src="/images/menu.png" alt="" class="w-5  h-5">
                                                        <div class="flex items-center space-x-2 text-[#153244]">
                                                            <div class="">

                                                                <p class="">Breakfast Included </p>
                                                                <p class="">Private Transfer </p>
                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>



                                            </div>
                                        </div>
                                        <div class="h-px w-full bg-gray-300 mt-2"></div>

                                        <div class="flex justify-between">
                                            <div class="space-y-3">
                                                <div class="">
                                                    <p class="text-white ml-3 mt-3">Sub Total:</p>
                                                </div>
                                                <div class="ml-7">
                                                    <ul class="list-disc">
                                                        <li class="text-white">Disneyland Tour</li>
                                                    </ul>
                                                    <div class="text-white">
                                                        <p class="">2 Adult: HK$800.00/per.</p>
                                                        <p class="">2 Children: HK$500.00/per.</p>
                                                        <p class="">Transfer: HK$300.00</p>
                                                    </div>
                                                </div>
                                                <div class="ml-7">
                                                    <ul class="list-disc">
                                                        <li class="text-white">Cold Coast Hotel HK</li>
                                                    </ul>
                                                    <div class="text-white">
                                                        <!-- <p class=""><%- booked_res[i].booked_date %> - 08 Sept. 2023 (3 nights): -->
                                                        <p class=""><%- booked_res[i].booked_date %> (3 nights):
                                                            HK$3,000.00</p>
                                                        <p class="">Transfer (APR - Hotel - ARP): HK$600.00</p>
                                                    </div>
                                                </div>
                                                <div class="ml-7">
                                                    <p class="text-black text-xl font-[700]">TOTAL: HK$6,500.00</p>
                                                </div>
                                            </div>

                                            <div class="mx-4 space-y-2 mt-3">
                                                <div
                                                    class="bg-[#b49442] p-2 font-bold text-xl px-8 py-2 rounded-3xl text-white text-center">
                                                    PENDING</div>
                                                <div
                                                    class="bg-[#3fa971] p-2 font-bold text-xl px-8 py-2 rounded-3xl text-white text-center">
                                                    PAYED</div>
                                            </div>
                                        </div>
                                        <div class="h-px w-full bg-gray-300 mt-2"></div>
                                        <div class="ml-7 my-2">
                                            <p class="text-black">Booking Date: <%- booked_res[i].booked_date %></p>
                                            <p class="text-black">Confirmation ID: 1234567890</p>
                                            <p class="text-black">Company: AMIST INTERENATIONAL GROUP LTD.</p>
                                        </div>
                                    </div>



                                </div>
                                
                                <% } %>
                            </div>
                        </div>


                            <% } %>
        </div>
    </div>

    <script src="/scripts/profile.js"></script>
</body>

<script>
    $(document).ready(function () {
        $(' .js-date--west').mask('00/00/0000'); // Validation $('.js-btn').on('click', function () {
        $('.js-validation-message').removeClass('red');
        $('.js-validation-message').removeClass('green');
        var
            dateObj = $('.js-date--west');
        if (dateObj.val() == null ||
            dateObj.val() != "") {
                var
                d1 = Date.parse(dateObj.val().replace(/([0-9]+)\/([0-9]+)/, '$2/$1'
                )); if (d1 == null ||
                    isNaN(parseFloat(d1))) {
                $('.js-validation-message').html('Error!');
                $('.js-validation-message').addClass('red');
            } else {
                $('.js-validation-message').html('Valid!');
                $('.js-validation-message').addClass('green');
            }
        } else {
            $('.js-validation-message').html('Required');
            $('.js-validation-message').addClass('red');
        }
    }); function myFunction() {
        var
        x = document.getElementById("myDIV");
        if
            (x.style.display === "block") { x.style.display = "none"; }
        else {
            x.style.display = "block";
        }
    } </script>

</html>